rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow write access to authenticated users for documents collection
    match /documents/{document} {
      allow write: if request.auth != null;
    }
    
    // Allow users to read/write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow account requests to be created by anyone (for registration)
    // but only allow reading/updating by authenticated users
    match /accountRequests/{requestId} {
      allow create: if true; // Allow anyone to create account requests
      allow read, update, delete: if request.auth != null;
    }
    
    // Allow authenticated users to read/write team data
    match /teams/{teamId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write posts
    match /posts/{postId} {
      allow read, write: if request.auth != null;
    }
  }
} 